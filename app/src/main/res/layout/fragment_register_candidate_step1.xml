<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RegisterCandidateStep1_Fragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="Personal Information"
                android:textSize="26sp" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Attach a photo of your valid PWD ID"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView_selectPWD_id"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@color/background"
                android:src="@drawable/id_picture"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="* Please tap the image above to begin selecting your photo."
                android:textSize="14sp"
                android:textStyle="italic"
                />
            <!--First Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="15dp"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="First Name"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pwd_enterFirstName_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:hint="Juan"
                app:boxStrokeColor="@color/btnColor"
                app:hintTextColor="@color/btnColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_PWDfirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:inputType="textWebEditText"
                    android:textColor="#232c33"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="16sp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <!--Last Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Last Name" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pwd_enterLastName_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:hint="Dela Cruz"
                app:boxStrokeColor="@color/btnColor"
                app:hintTextColor="@color/btnColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_PWDlastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:inputType="textWebEditText"
                    android:textColor="#232c33"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="16sp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <!--Contact Number-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Contact Number" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pwd_enterContactNumber_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:hint="+639..."
                app:boxStrokeColor="@color/btnColor"
                app:hintTextColor="@color/btnColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_PWDcontactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:inputType="number"
                    android:textColor="#232c33"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="16sp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <!--Address-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Address"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pwd_enterAddress_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:hint="Blk 1 Lot 2 Brngy. San Jose..."
                app:boxStrokeColor="@color/btnColor"
                app:hintTextColor="@color/btnColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_PWDaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:inputType="textWebEditText"
                    android:textColor="#232c33"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="16sp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="City"
                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_EMPcity"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                tools:ignore="SpeakableTextPresentCheck"
                android:entries="@array/City"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="end"
                android:text="Step 1 out of 3"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext_fragment1"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Proceed"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>